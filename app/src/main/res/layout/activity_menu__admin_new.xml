<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.Menu_Admin_new">
    <ImageView
        android:id="@+id/ad_userr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/adduser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />


    <ImageView
        android:id="@+id/v_att"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/viewatten"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="0dp" />

    <ImageView
        android:id="@+id/em_detailss"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/empdetail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp" />

    <ImageView
        android:id="@+id/logou_em"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logout_copy"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btn_exitt"
        android:layout_marginTop="40dp"
        android:typeface="sans"
        android:textStyle="normal"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnlightblue"
        android:layout_below="@+id/em_detailss"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />
</RelativeLayout>
