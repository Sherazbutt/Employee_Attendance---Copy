<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.Admin_login"
    android:background="@drawable/gradient">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="220dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/admin_login"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-7dp" />



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_admin"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:maxLines="1"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/mailcopy"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:layout_above="@+id/pass_admin"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/pass_admin"
        android:textColorHint="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:drawableLeft="@drawable/passwordcopy"
        android:drawablePadding="10dp"
        android:textColor="#ffffff"
        android:hint="Password"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/login_admin"
        android:typeface="normal"
        android:textStyle="bold"
        android:background="@drawable/btntwo"
        android:textColor="#28a1d8"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/btncreate_admin"
        android:layout_centerHorizontal="true"
        android:textSize="16dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btncreate_admin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:typeface="normal"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnlightblue"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
