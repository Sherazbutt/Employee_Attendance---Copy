<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.Add_user"
    android:background="@drawable/gradient">

    <ImageView
            android:id="@+id/ad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/addusermenu"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btncancel"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold"

            android:background="@drawable/btnlightblue"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/signup"
            android:layout_alignParentStart="true"
            android:typeface="sans" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign UP"
            android:id="@+id/signup"
            android:textColor="#28a1d8"
            android:textSize="16dp"
            android:typeface="sans"
            android:background="@drawable/btntwo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/confirm_password"
            android:layout_marginBottom="18dp"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_name"


            android:maxLines="1"
            android:hint="Name"
            android:textColorHint="#FFFFFF"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/name_check"
            android:drawablePadding="10dp"

            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_above="@+id/input_email"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:drawableLeft="@drawable/mailcopy"
            android:id="@+id/input_email"

            android:maxLines="1"
            android:textColorHint="#FFFFFF"
            android:textColor="#ffffff"

            android:drawablePadding="10dp"
            android:hint="Email"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_above="@+id/input_password"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/input_password"
            android:password="true"
            android:maxLines="1"
            android:textColorHint="#FFFFFF"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/passwordcopy"
            android:drawablePadding="10dp"

            android:hint="Password"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#ffffff"
            android:id="@+id/confirm_password"
            android:maxLines="1"
            android:hint="Confirm Password"
            android:textColorHint="#FFFFFF"

            android:drawableLeft="@drawable/unlock"
            android:drawablePadding="10dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/input_password"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp" />

    </RelativeLayout>

