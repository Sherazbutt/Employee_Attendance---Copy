<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.Admin_menu"
    android:background="@drawable/gradient">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Add User"
        android:id="@+id/add_user"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="normal"
        android:background="@drawable/btn"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:text="View Attendance"
        android:id="@+id/view_attendance"
        android:background="@drawable/btn"
        android:layout_below="@+id/add_user"
        android:layout_alignStart="@+id/add_user"
        android:layout_alignEnd="@+id/add_user"
        android:layout_marginBottom="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Employee Details"
        android:id="@+id/employee_details"
        android:textColor="#ffffff"
        android:background="@drawable/btn"
        android:layout_below="@+id/view_attendance"
        android:layout_alignStart="@+id/view_attendance"
        android:layout_alignEnd="@+id/view_attendance"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="LOGOUT"
        android:id="@+id/logoutt"
        android:background="@drawable/btn"
        android:textColor="#ffffff"
        android:layout_below="@+id/employee_details"
        android:layout_alignStart="@+id/employee_details"
        android:layout_alignEnd="@+id/employee_details"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Exit"
        android:id="@+id/exit_button"
        android:background="@drawable/btn"
        android:layout_below="@+id/logoutt"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/logoutt"
        android:layout_alignEnd="@+id/logoutt" />
</RelativeLayout>
