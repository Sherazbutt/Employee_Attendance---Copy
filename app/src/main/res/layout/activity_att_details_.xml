<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:textColor="#FFFFFF"
            android:id="@+id/idd"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NAME"
            android:id="@+id/namee"

            android:textColor="#FFFFFF"
            android:layout_below="@+id/idd"
            android:layout_alignStart="@+id/idd"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DATE"
            android:textColor="#FFFFFF"
            android:id="@+id/datee"
            android:layout_below="@+id/namee"
            android:layout_alignStart="@+id/namee"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIME IN"
            android:id="@+id/timeinn"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/datee"
            android:layout_alignStart="@+id/datee"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIME OUT"
            android:textColor="#FFFFFF"
            android:id="@+id/timeoutt"
            android:layout_below="@+id/timeinn"
            android:layout_alignStart="@+id/timeinn"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WORKING HOURS"
            android:id="@+id/w_hourss"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/timeoutt"
            android:layout_alignStart="@+id/timeoutt"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="W-HOURS"
            android:textColor="#FFFFFF"
            android:id="@+id/textView35"
            android:layout_marginRight="39dp"
            android:layout_marginStart="47dp"
            android:layout_alignTop="@+id/w_hourss"
            android:layout_alignParentStart="true"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIME OUT"
            android:id="@+id/textView36"
            android:textColor="#FFFFFF"
            android:layout_marginRight="39dp"
            android:layout_below="@+id/timeinn"
            android:layout_alignStart="@+id/textView37"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TIME IN"
            android:id="@+id/textView37"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="0dp"
            android:layout_alignTop="@+id/timeinn"
            android:layout_alignStart="@+id/textView35"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DATE"
            android:id="@+id/textView38"
            android:textColor="#FFFFFF"
            android:layout_marginRight="39dp"
            android:layout_alignTop="@+id/datee"
            android:layout_alignStart="@+id/textView37"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NAME"
            android:id="@+id/textView39"
            android:layout_marginRight="39dp"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@+id/namee"
            android:layout_alignStart="@+id/textView38"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:textColor="#FFFFFF"
            android:id="@+id/textView40"
            android:layout_marginRight="39dp"
            android:layout_alignTop="@+id/idd"
            android:layout_alignStart="@+id/textView39"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>

