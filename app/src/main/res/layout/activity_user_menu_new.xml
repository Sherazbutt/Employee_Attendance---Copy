<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.User_menu_new">
    <ImageView
        android:id="@+id/ad_emplo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/add_employeee"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />


    <ImageView
        android:id="@+id/t_att"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/take_attandance"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/tim_outt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/time_again"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp" />

    <ImageView
        android:id="@+id/logou_userr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logout_copy"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="183dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btn_user_exitt"
        android:typeface="normal"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnlightblue"
        android:textSize="16dp"
        android:layout_below="@+id/tim_outt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />
</RelativeLayout>

