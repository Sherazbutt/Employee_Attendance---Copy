<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.Take_Attendance"
    android:textAlignment="viewStart"
    android:background="@drawable/gradient">
    <ImageView
        android:id="@+id/ad_userr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/t_attt"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-17dp"
        android:layout_marginBottom="0dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:ellipsize="marquee"
        android:textSize="25sp"
        android:textColor="#808080"
        android:text="[Select Employee...]"
        android:paddingLeft="30dp"
        android:layout_marginRight="60dp"
        android:paddingTop="0dp"
        android:layout_below="@+id/ad_userr"
        android:layout_alignStart="@+id/ad_userr"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button"
        android:textStyle="bold"
        android:background="@drawable/btntwo"
        android:textColor="#28a1d8"
        android:typeface="normal"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Select Date"
        android:id="@+id/date_button"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:layout_marginTop="200dp"
        android:background="@drawable/btnlightblue"
        android:typeface="normal"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/spinner2"
        android:spinnerMode="dropdown"

        android:layout_marginRight="0dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/date_button"
        android:layout_alignEnd="@+id/date_button"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status :"
        android:textColor="#ffffff"
        android:id="@+id/textView18"
        android:textSize="15dp"
        android:paddingTop="9dp"
        android:layout_alignTop="@+id/spinner2"
        android:layout_alignStart="@+id/date_button"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Employee :"
        android:id="@+id/textView5"
        android:paddingTop="9dp"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignStart="@+id/date_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/in_time"
        android:hint="TIME IN"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/btnlightblue"
        android:typeface="normal"
        android:textColor="#FFFFFF"
        android:layout_alignStart="@+id/ad_userr"
        android:layout_alignEnd="@+id/ad_userr"
        android:layout_above="@+id/save_button"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
