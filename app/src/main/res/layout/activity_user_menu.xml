<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sherazbutt.employee_attendance.User_menu"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView11"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Register Employee"
        android:textColor="#ffffff"
        android:id="@+id/register_user"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/take_attendance"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:text="Take Attendance"
        android:textColor="#ffffff"
        android:layout_below="@+id/register_user"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="LOGOUT"
        android:id="@+id/u_logout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_below="@+id/time_out_button"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Exit"
        android:id="@+id/u_exit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_below="@+id/u_logout"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Time Out"
        android:id="@+id/time_out_button"
        android:layout_below="@+id/take_attendance"
        android:layout_alignStart="@+id/take_attendance"
        android:layout_alignEnd="@+id/take_attendance"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:background="@drawable/btn"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
